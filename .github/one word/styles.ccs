body {
    font-family: Arial, sans-serif;
    text-align: center;
}

#word-of-the-day {
    font-size: 24px;
    margin-top: 20px;
}

#change-word-btn {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #007bff;
    color: #fff;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    margin-top: 20px;
}

#change-word-btn:hover {
    background-color: #0056b3;
}
